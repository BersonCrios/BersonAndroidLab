<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.bersoncrios.myandroidlab">
    <!-- INTERNET PERMISSION -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyAndroidLabApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_chemistry"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chemistry"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".features.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".features.main.MainActivity" />

        <activity android:name=".features.horizontalRv.view.activity.HorizontalRVActivity"/>

        <activity android:name=".features.starwars.view.activity.SwActivity" />
    </application>

</manifest>